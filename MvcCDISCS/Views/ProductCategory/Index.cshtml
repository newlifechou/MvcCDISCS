@model IEnumerable<MvcCDISCS.Models.productcategory>

@{
    ViewBag.PageTitle = "Index";
    Layout = "~/Views/Shared/_BackEndContent.cshtml";
}

@section rightpart{
    <p>
        @Html.ActionLink("新增", "Create",null, new { @class = "btnadd" })
    </p>
    <table class="edit-table">
        <tr class="thead">
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td>
                    @Html.ActionLink("编辑", "Edit", new { id = item.CategoryId }, new { @class = "editdelete" })
                    <!--隐藏掉删除功能，防止犯错-->
                    @*@Html.ActionLink("删除", "Delete", new { id = item.CategoryId }, new { @class = "editdelete" })*@
                </td>
            </tr>
        }

    </table>
}

