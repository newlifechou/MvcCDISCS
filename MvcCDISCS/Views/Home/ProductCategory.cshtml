@model MvcCDISCS.Models.productcategory
@{
    ViewBag.PageTitle = "ProductCategory";
    Layout = "~/Views/Shared/_Content.cshtml";
}

@section leftpart{
    <div class="partmenu">
        <h3>产品类别</h3>
        <ul>
            @Html.Action("GetProductCategoryMenu", "PV")
        </ul>
    </div>
}
@section rightpart{
    <h2>@Model.CategoryName</h2>
    <div id="topcontent">
        <img src="~/Images/@(Model.Photo).jpg" alt="@Model.CategoryName" id="titleimg" />
        <p>@Model.Memo</p>
    </div>
    <div id="productlist">
        <!--display the products under the category list-->
        @if (Model.Products.Count > 0)
        {
            foreach (var item in Model.Products)
            {
                <a href="#">
                    <img src="~/Images/product/@(item.Photo).jpg" alt="@item.Photo" />
                    <p>@item.ProductName</p>
                </a>
            }
        }
        else
        {
            <div>抱歉，该分类下暂时没有添加产品，请等待</div>
        }
    </div>
}
