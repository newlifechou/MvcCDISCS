@using PagedList.Mvc
@model MvcCDISCS.Models.ProductCategoryPage
@{
    ViewBag.PageTitle = "ProductCategory";
    Layout = "~/Views/Shared/_Content.cshtml";
}
@section cssmore2{
    <link href="~/Content/PagedList.css" rel="stylesheet"  type="text/css"/>
}
@section leftpart{
    <div class="partmenu">
        <h3>产品类别</h3>
        <ul>
            @Html.Action("GetProductCategoryMenu", "PV")
        </ul>
    </div>
    <div class="partmenu">
        <h3>联系我们</h3>
        <ul>
            <li><a href="~/Home/Contact">联系方式</a></li>
            <li><a href="~/Home/Feedback">网上留言</a></li>
        </ul>
    </div>
}
@section rightpart{
    <h2>@Model.pc.CategoryName</h2>
    <div id="topcontent">
        <img src="~/Images/@(Model.pc.Photo).jpg" alt="@Model.pc.CategoryName" id="titleimg" />
        <p>@Model.pc.Memo</p>
    </div>
    <div id="productlist">
        <!--display the products under the category list-->
        @if (Model.products.Count > 0)
        {
            foreach (var item in Model.products)
            {
                <a href="~/Home/Product/@item.ProductId">
                    <img src="~/Images/product/@(item.Photo).jpg" alt="@item.Photo" />
                    <p>@item.ProductName</p>
                </a>
            }
        }
        else
        {
            <div>抱歉，该分类下暂时没有添加产品，请等待</div>
        }
    </div>
    @Html.PagedListPager(Model.products, page => Url.Action("ProductCategory", new { id=Model.pc.CategoryId,page}))
}
