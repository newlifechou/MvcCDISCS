@model IEnumerable<MvcCDISCS.Models.flash>

@{
    ViewBag.PageTitle = "Index";
    Layout = "~/Views/Shared/_BackEndContent.cshtml";
}

@section rightpart{
<p>
    @Html.ActionLink("新增", "Create",null, new { @class = "btnadd" })
</p>
<table class="edit-table">
    <tr class="thead">
        <th>
            @Html.DisplayNameFor(model => model.SlidePhoto)
        </th>
        <th>
            <p>@Html.DisplayNameFor(model => model.Memo)</p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Priority)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SlidePhoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Memo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                @Html.ActionLink("编辑", "Edit", new { id = item.Id }, new { @class = "editdelete" }) 
                @Html.ActionLink("删除", "Delete", new { id = item.Id }, new { @class = "editdelete" })
            </td>
        </tr>
    }
</table>
}

